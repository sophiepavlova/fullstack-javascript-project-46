    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^9.11.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "esbuild-jest"
